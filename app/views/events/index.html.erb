    <div class="col">
      <h1>Events</h1>
    </div>

    <div class="col d-flex justify-content-end">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="#">Upcoming</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="#">Past</a>
